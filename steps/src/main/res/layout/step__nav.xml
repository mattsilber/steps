<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/step__nav_height">

    <com.guardanis.steps.views.nav.IndicatorView
        android:id="@+id/step__nav_indicator"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/step__nav_previous"
            style="@style/step__nav_action"
            android:text="@string/step__nav_text_previous"
            android:textColor="@color/step__nav_action_previous"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/step__nav_skip"
            style="@style/step__nav_action"
            android:text="@string/step__nav_text_skip"
            android:textColor="@color/step__nav_action_skip"
            android:visibility="gone"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/step__nav_next"
            style="@style/step__nav_action"
            android:textColor="@color/step__nav_action_next"/>

    </LinearLayout>
</RelativeLayout>